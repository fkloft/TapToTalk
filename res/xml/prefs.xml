<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory>
		<SwitchPreference
			android:defaultValue="false"
			android:key="pref_start_service"
			android:title="@string/pref_start_service"/>

		<CheckBoxPreference
			android:defaultValue="false"
